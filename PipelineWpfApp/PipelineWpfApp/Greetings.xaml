<Window x:Class="PipelineWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PipelineWpfApp"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="315,47,0,0" TextWrapping="Wrap" Text="Select a message option and then Display." VerticalAlignment="Top"/>
        <RadioButton x:Name="HelloButton" Content="Hello" HorizontalAlignment="Left" Margin="298,161,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="GoodbyeButton" Content="Goodbye" HorizontalAlignment="Left" Margin="488,161,0,0" VerticalAlignment="Top"/>
        <Button x:Name="DisplayButton" Content="Display" HorizontalAlignment="Left" Margin="400,238,0,0" VerticalAlignment="Top" Click="DisplayButton_Click"/>
        <TextBox x:Name="ShowBox" HorizontalAlignment="Left" Margin="361,299,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" BorderThickness="0,0,0,0" HorizontalContentAlignment="Center"/>



    </Grid>
</Window>
